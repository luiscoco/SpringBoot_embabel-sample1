<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 https://maven.apache.org/xsd/settings-1.0.0.xsd">

  <!--
    Local settings template for resolving Embabel artifacts behind a proxy.
    Usage: mvn -s settings.local.xml -DskipTests package

    Fill in either the <servers> credentials (preferred) and, if required,
    the corporate proxy under <proxies>. Remove comments before use.
  -->

  <servers>
    <server>
      <id>embabel-releases</id>
      <username>YOUR_USERNAME_OR_TOKEN_ID</username>
      <password>YOUR_PASSWORD_OR_ACCESS_TOKEN</password>
    </server>
    <server>
      <id>embabel-snapshots</id>
      <username>YOUR_USERNAME_OR_TOKEN_ID</username>
      <password>YOUR_PASSWORD_OR_ACCESS_TOKEN</password>
    </server>
  </servers>

  <!-- Optional corporate proxy config; activate if downloads are blocked. -->
  <!--
  <proxies>
    <proxy>
      <active>true</active>
      <protocol>https</protocol>
      <host>proxy.example.com</host>
      <port>443</port>
      <username>PROXY_USER</username>
      <password>PROXY_PASSWORD</password>
      <nonProxyHosts>localhost|127.*|[::1]|*.local</nonProxyHosts>
    </proxy>
  </proxies>
  -->

  <profiles>
    <profile>
      <id>windows-os-trust</id>
      <properties>
        <!-- Make Maven use Windows OS trust store (works on Windows with SunMSCAPI). -->
        <maven.opts>-Djavax.net.ssl.trustStoreType=Windows-ROOT</maven.opts>
      </properties>
    </profile>
  </profiles>

  <activeProfiles>
    <activeProfile>windows-os-trust</activeProfile>
  </activeProfiles>

</settings>

